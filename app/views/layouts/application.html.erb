<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<!-- IE6-8 support of HTML elements -->
	<!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<title>OpenSNP <% if @title %>| <%= @title %><% end %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, "nested_form","jquery-1.6.2.min.js","jquery.tablesorter.min.js", "jquery.ba-hashchange.min.js","jquery.easytabs.js","jquery-ui-1.8.16.custom.min.js"%>
<script type="text/javascript">
  $(document).ready(function(){
    $('#tab-container').easytabs();
  });
</script>

  <%= csrf_meta_tag %>

</head>
<body>	
<div class="topbar">
	<div class="fill" >
		<div class="container">
			<h3><%= link_to("OpenSNP", root_path, :class =>"logo") %></h3>
			<ul class="nav"> 
				<li><%= link_to("News", '/news') %></li>
				<li><%= link_to("FAQ", '/faq') %></li> 
				<li><%= link_to("Phenotypes", :controller => "phenotypes", :action => "index")%>
				<li><%= link_to("SNPs", :controller => "snps", :action => "index") %></li>
				<li><%= link_to("All users", '/user_index') %></li>
			</ul>
			<%= form_tag "/search", :method => "get", :authenticity_token => true do %>
				<%= text_field_tag :search, "Search" %>
			<% end %>
			<ul class="nav secondary-nav"> 
				<% if current_user %>
					<li class="dropdown">
					<a href="#" class="dropdown-toggle"><%= image_tag current_user.avatar.url(:head)%> <%= current_user.name %></a>
					<ul class="dropdown-menu">
					<li><%= link_to("User's home", current_user)%></li>
					<li class="divider"></li>
					<li><%= link_to("Sign out", '/signout') %></li>
					</ul>
					</li>
				<% else %>
					<li><%= link_to("Sign in", '/signin') %></li>
				<% end %>
				<li><a href="http://www.nephoscale.com" target="_blank"><img src="/images/poweredbynephoscale.png" width="80"/></a></li>
			</ul>
		</div>
	</div>
</div>

<div class="container">
	<% if flash[:notice] %><div class="alert-message success"> <p><%= flash[:notice] %></p></div> <% end %>
	<% if flash[:warning] %><div class="alert-message error"><p><%= flash[:warning] %></p></div> <% end %>
	<%= yield %>
</div>
</div>
</body>
</html>
