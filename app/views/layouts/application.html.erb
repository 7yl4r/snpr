<!DOCTYPE html>
<html>
<head>
	<title>SNPr <% if @title %>| <%= @title %><% end %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="header" >
	<%= link_to("SNPr", root_path) %> |
	<%= link_to("FAQ", '/faq') %> | 
    News | 
	<%= link_to("SNPs", :controller => "snps", :action => "index") %> |
	<%= link_to("All users", '/users') %> |
	<% if current_user %>
		<%= link_to("User's home", current_user)%> | 
		<%= link_to("Sign out", user_sessions_path, :method => :delete) %>
	<% else %>
		<%= link_to("Sign in", '/signin') %>
	<% end %>
</div>

<% if flash[:notice] %> <p style="color: green"><%= flash[:notice] %></p> <% end %>
<% if flash[:warning] %> <p style="color: red"><%= flash[:warning] %></p> <% end %>

<%= yield %>

<div class="footer">
	A project from <%= link_to("Bastian Greshake", "http://www.twitter.com/gedankenstuecke") %> and <%= link_to("Philipp Bayer", "http://www.twitter.com/PhilippBayer") %>
</div>
</body>
</html>
