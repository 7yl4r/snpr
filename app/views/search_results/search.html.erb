<h2>Search results</h2>

<% if not @phenotypes.results == [] %>
	<h5>Phenotypes</h5>
	<ul>
<% for p in @phenotypes.results %>
	<li><%= link_to p.characteristic, p %> | <%= link_to "Download all relevant genotypes! bundle(p)", "#" %></li>
	<li>The following users share this phenotype:
	<ul>
		<% for up in UserPhenotype.where(:phenotype_id => p.id) %>
			<li><%= link_to User.find_by_id(up.user_id).name, User.find_by_id(up.user_id) %> | <%= up.variation %></li>
		<% end %>
	</ul>
<% end %>
</ul>
<% end %>

<% if not @snps.results == [] %>
	<h5>Snps</h5>
	<ul>
<% for p in @snps.results %>
	<li><%= link_to p.name, p %></li>
<% end %>
</ul>
<% end %>

<% if not @users.results == [] %>
	<h5>Users</h5>
	<ul>
<% for u in @users.results %>
	<li><%= link_to u.name, u %></li>
<% end %>
</ul>
<% end %>

<% if not @user_phenotypes.results == [] %>
	<h5>Phenotype variations:</h5>
	<ul>
<% for p in @user_phenotypes.results %>
	<li><%= p.variation%></li>
	<li>Linked to the following phenotypes:</li>
	<ul>
	<% for p in Phenotype.where(:id => p.phenotype_id) %>
		<li><%= link_to p.characteristic, p %>
	<% end %>
</ul>
<% end %>
</ul>
<% end %>

<% if not @snp_comments.results == [] %>
	<ul>
<% for p in @snp_comments.results %>
	<li><%= p.inspect %></li>
<% end %>
</ul>
<% end %>
                         
