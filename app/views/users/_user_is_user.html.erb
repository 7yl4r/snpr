<h1>Hello <%= @first_name %>!</h1>
<% if current_user.messages.where(:user_has_seen => false) != [] %>
	<p>You have messages!</p>
<% end %>
	<p>Edit your details and variations: <%= link_to("Click",  :controller => "users", :action => "edit") %></p<>

<div id="tab-container">
	<ul class="tabs">
		<li><a href="#snps">Your SNPs</a></li>
		<li><a href="#variations">Your variations</a></li>
		<li><a href="#messages">Your messages</a></li>
	</ul>

<div id="snps">
<% if @user.has_sequence == true %>
	<table>
	<tr>
		<th>SNP-ID</th>
		<th>Name</th>
		<th>Position</th>
		<th>Chromosome</th>
		<th>Genotype-Frequency</th>
		<th>Allele-Frequency</th>
		<th>Ranking</th>
	</tr>
	<% @snps.each do |s| %>
		<tr>
			<td><%= s.id%></td>
			<td><%= s.name%></td>
			<td><%= s.position %></td>
			<td><%= s.chromosome %></td>
			<td><%= s.genotype_frequency.keys()[0] + " = " + s.genotype_frequency.values()[0].to_s%></td>
			<td><% s.allele_frequency.each do |k,v| %><%= k + " = " + v.to_s + " " %><% end %> </td>
			<td><%= s.ranking %></td>
	</tr>
<% end %>
</table>
<%= will_paginate(@snps) %>
<% else %>
	<p>You haven't uploaded your SNP-set. <%= link_to("Please do so", :controller => "genotypes", :action => "new")%></p>
<% end %>
</div>

<div id="variations">
	<h3>Variations:</h3> <%= render "variations" %>
</div>

<div id="messages">
<h3>Messages</h3>
<p><%= link_to "Write a new message", :controller => "messages", :action => "new" %></p>
<h4>Received</h4>
<table>
	<tr>
	<th>From</th>
	<th>Subject</th>
	<th></th>
	</tr>
<% @received_messages.each do |m| %>
	<tr>
	<td><%= User.find_by_id(m.from_id).name %></td>
	<td><%= link_to( m.subject, m ) %></td>
	<td><% if m.user_has_seen == false %>New!<% end %></td>
	<td><% if m.user_has_seen == false %>New!<% end %></td>
	</tr>
<% end %>
</table>
<h3>Sent</h3>
<table>
	<tr>
	<th>To</th>
	<th>Subject</th>
	</tr>
<% @sent_messages.each do |m| %>
	<tr>
	<td><%= User.find_by_id(m.to_id).name %></td>
	<td><%= link_to( m.subject, m ) %></td>
	</tr>
<% end %>
</table>
</div>
