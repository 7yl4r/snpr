<?xml version="1.0" standalone="yes"?>
<DASGFF>
    <%= request.env["SERVER_SOFTWARE"] %>
    <GFF version="1.0" href="<%= request.url %>">
    <% @user_snps.each_with_index do |s, i| %>
	 <% if @unkown_chromosome[i] == false %>
        <% @user_snps[i].each do |us| %>
        <SEGMENT id="<%= @id[i] %>" version="1.0" <%if @has_start[i] == true %> start="<%= @start_and_end[i][0] %>" end="<%= @start_and_end[i][1] %>"<%else%> start="1" end="" <%end%>>
                <FEATURE id="<%= us.snp_name %>">
                    <TYPE id="<%= us.local_genotype %>" />
                    <METHOD id="" />
                    <START>
                        <%= Snp.find_by_name(us.snp_name).position %>
                    </START>
                    <END>
                        <%= Snp.find_by_name(us.snp_name).position %>
                    </END>
                    <SCORE>
                        0
                    </SCORE>
                    <PHASE>
                        -
                    </PHASE>
                    <ORIENTATION>
                        0
                    </ORIENTATION>
                    <LINK href="<%= root_url+"snps/" + us.snp_name %>">
                        <%= root_url+"snps/" + us.snp_name %>
                    </LINK>
                </FEATURE>
        </SEGMENT> 
    <% end %>
	<%else%>
	<UNKNOWNSEGMENT id="<%=@id%>" />
	<%end%>
    <% end %>
    </GFF>
</DASGFF>
