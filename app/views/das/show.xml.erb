<?xml version="1.0" standalone="yes"?>
<DASGFF>
    <GFF version="1.0" href="<%= request.url %>">
	 <% if @unkown_chromosome == false %>
        <SEGMENT id="<%= @id %>" version="1.0" <%if @has_start == true %> start="<%= @start %>" end="<%= @end %>"<%else%> start="1" end="" <%end%>>
            <% @user_snps.each do |us| %>
                <FEATURE id="<%= us.snp_name %>">
                    <TYPE id="<%= us.local_genotype %>" />
                    <METHOD id="" />
                    <START>
                        <%= Snp.find_by_name(us.snp_name).position %>
                    </START>
                    <END>
                        <%= Snp.find_by_name(us.snp_name).position %>
                    </END>
                    <SCORE>
                        0
                    </SCORE>
                    <PHASE>
                        -
                    </PHASE>
                    <ORIENTATION>
                        0
                    </ORIENTATION>
                    <LINK href="<%= root_url+"snps/" + us.snp_name %>">
                        <%= root_url+"snps/" + us.snp_name %>
                    </LINK>
                </FEATURE>
            <% end %>
        </SEGMENT> 
	<%else%>
	<UNKNOWNSEGMENT id="<%=@id%>" />
	<%end%>
    </GFF>
</DASGFF>
