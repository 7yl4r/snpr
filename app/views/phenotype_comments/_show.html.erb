<% @comments.each do |c|%>
	<div id=<%="comment"+c.id.to_s%>>
	<b><%= c.subject %></b> by user <%= link_to User.find_by_id(1).name, User.find_by_id(1)%> on <%= c.created_at %><br/>
	<% if c.reply_to_id != -1 and c.reply_to_id != nil %>Replying to <%= link_to SnpComment.find_by_id(c.reply_to_id).subject, "/snps/"+@snp.id.to_s+"#comment"+c.reply_to_id.to_s %><% end %>
	<div class="well">
	<%= c.comment_text %>
	</div>
</div>
<% end %>
