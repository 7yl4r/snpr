<h2>SNP <%= @snp.name %></h2>
<script type="text/javascript" src="javascripts/PLoSLib.js"></script> 
<script type="text/javascript" src="javascripts/PLoSSearch.js"></script>

<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Position</th>
		<th>Chromosome</th>
		<th>Genotype-Frequency</th>
		<th>Allele-Frequency</th>
	</tr>
	<tr>
		<td><%= @snp.id %></td>
		<td><%= @snp.name %></td>
		<td><%= @snp.position %></td>
		<td><%= @snp.chromosome %></td>
		<td><%@snp.genotype_frequency.each do |key,value|%>
			<%=key+" = "+(value.to_f/@total_genotypes).to_s+"\t"%>
			<%end%>
			</td>
		<td><% @snp.allele_frequency.each do |key,value| %>
			<%=key+" = "+(value.to_f/@total_alleles).to_s+"\t"%>
			<%end%></td>
	</tr>
</table>
<p>Associated with the following:<br/>
Insert parsing results
</p>

<p>Users who share this SNP:<br/>
<% @users.each do |u| %>
	<%= link_to( u.name, u ) %><br/>
<% end %></p>

 <p>Publications on this SNP on the Public Library of Science:</p>
<table>
	<tr>
		<th>First Author</th>
		<th>Title</th>
		<th>Publication Date</th>
		<th>DOI</th>
	</tr>
	
	<% @snp.plos_paper.each do |p|%>
		<tr>
			<td><%=p.first_author%></td> 
			<td><%=link_to( p.title, "http://dx.doi.org/"+p.doi)%></td>
			<td><%=p.pub_date%></td>
			<td><%=p.doi%></td>
		</tr>
	<%end%>