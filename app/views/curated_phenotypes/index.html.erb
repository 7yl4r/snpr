<legend>Listing all curated phenotypes</legend>
<% if current_user %>
    <h4><%= link_to image_tag("addphenotype_small.png", :style => "vertical-align:middle"), :controller => "curated_phenotypes", :action => "new" %> <%= link_to "Change your curated phenotypes here!", :controller => "curated_phenotypes", :action => "new" %></h4>
<% end %>
<table class="table table-striped" id="c_phenotypes_overview">
<tr>
	<th><%= sortable "name","Name"%></th>
	<th><%= sortable "description","Description"%></th>
    <th>Count of users</th>
</tr>
<% @curated_phenotypes_paginate.each do |cp| %>
<tr>
    <td><%= link_to(cp.name, cp) %></td>
    <td><%= cp.description %></td>
    <td><%= cp.users.length %></td>
</tr>
<% end %>
</table>
<%= page_navigation_links @curated_phenotypes_paginate %>
