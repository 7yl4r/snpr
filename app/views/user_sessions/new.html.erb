<h1>Login</h1>

<%= form_for @user_session, :url => {:action => "create"} do |f| %>
  <%= f.error_messages %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
    </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
  <div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    </div>
  <div>
    <%= f.submit "Login" %>
</div>
<% end %>

<%= link_to("Not registered? Click here!", '/signup') %> | <%= link_to("Forgot password? Click here!", :controller => "password_resets", :action => "new") %>
