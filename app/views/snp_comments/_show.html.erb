<script language="JavaScript" type="text/JavaScript"> 
function sendCommentId(e, text) 
{ 
  e.value = text 
} 
</script>
<% @comments.each do |c|%>
	<div id=<%="comment"+c.id.to_s%>>
	<b><%= c.subject %></b> by user <%= link_to User.find_by_id(c.user_id).name, User.find_by_id(c.user_id)%> on <%= c.created_at %><br/>
	<% if c.reply_to_id != -1 and c.reply_to_id != nil %>Replying to <%= link_to SnpComment.find_by_id(c.reply_to_id).subject, "/snps/"+@snp.id.to_s+"#comment"+c.reply_to_id.to_s %><% end %>
	<div class="well">
	<%= c.comment_text %><br/><%=link_to_function "reply to", "sendCommentId(document.new_comment.snp_comment_comment_text,'@#"+c.id.to_s+": ')"%>
	</div>
</div>
<% end %>
