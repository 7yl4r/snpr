<% @comments.each do |c|%>
	<b><%= c.subject %></b> by user <%= link_to User.find_by_id(c.user_id).name, User.find_by_id(c.user_id)%> on <%= c.created_at %><br/>
	<% if c.reply_to_id != -1 and c.reply_to_id != nil %>Replying to <%= link_to User.find_by_id(c.reply_to_id).name, User.find_by_id(c.reply_to_id) %><% end %>
	<div class="well">
	<%= c.comment_text %>
	</div>
<% end %>
